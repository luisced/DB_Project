# Database Configuration
POSTGRES_USER=your_db_user                 # PostgreSQL database user
POSTGRES_PASSWORD=your_secure_password      # PostgreSQL database password
POSTGRES_DB=your_db_name                   # PostgreSQL database name
POSTGRES_PORT=5432                         # PostgreSQL port (default: 5432)
DB_ENGINE=django.db.backends.postgresql    # Database engine
POSTGRES_HOST=db                          # Database host (use 'db' for Docker, 'localhost' for local)

# Django Settings
DEBUG=False                               # Set to False in production
DJANGO_SETTINGS_MODULE=server.settings    # Django settings module
SECRET_KEY=your_secret_key_here          # Generate a secure secret key

# Default Superuser (change in production)
DJANGO_SUPERUSER_USERNAME=admin          # Default admin username
DJANGO_SUPERUSER_EMAIL=admin@domain.com  # Default admin email
DJANGO_SUPERUSER_PASSWORD=secure_pass    # Default admin password

# Additional Settings
# ALLOWED_HOSTS=.domain.com              # Allowed hosts in production
# CORS_ALLOWED_ORIGINS=https://app.domain.com  # CORS settings for production
